<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <assignments>
        <name>Copy_ProductLine_To_Multi</name>
        <label>Copy ProductLine To Multi</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <assignmentItems>
            <assignToReference>$Record.Product_Lines_Multi__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.Product_Line__c</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>When an Opportunity is created with Product_Line__c set, copy the value to Product_Lines_Multi__c if the multi-select field is blank. This ensures backwards compatibility.</description>
    <interviewLabel>Sync ProductLine To Multi On Create {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Sync ProductLine To Multi On Create</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Copy_ProductLine_To_Multi</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Product_Line__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Product_Lines_Multi__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
