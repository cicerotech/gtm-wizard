<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants read/edit access to per-product date and term fields on Opportunity Products. Assign to all sales profiles so reps can input product-specific start dates, terms, and see auto-calculated end dates.</description>
    <fieldPermissions>
        <editable>true</editable>
        <field>OpportunityLineItem.Product_Start_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>OpportunityLineItem.Product_Term_Months__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>false</editable>
        <field>OpportunityLineItem.Product_End_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Product Line Dates</label>
</PermissionSet>
