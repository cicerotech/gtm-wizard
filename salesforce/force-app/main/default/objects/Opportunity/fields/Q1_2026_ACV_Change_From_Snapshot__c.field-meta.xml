<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Q1_2026_ACV_Change_From_Snapshot__c</fullName>
    <description>Shows real-time change between current ACV and the original Q1 2026 snapshot. Positive = deal grew, Negative = deal shrunk.</description>
    <externalId>false</externalId>
    <formula>IF(
  Q1_2026_ACV_Snapshot__c > 0,
  ACV__c - Q1_2026_ACV_Snapshot__c,
  NULL
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Q1 2026 ACV Change From Snapshot</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
