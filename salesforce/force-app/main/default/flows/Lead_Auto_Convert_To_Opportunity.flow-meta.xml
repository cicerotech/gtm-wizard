<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <description>When a Lead Status changes to Converted, calls LeadConversionService to create Contact + Stage 1 Opportunity on the matched Account. Provides full traceability from outbound outreach to pipeline.</description>
    <interviewLabel>Lead Auto Convert To Opportunity {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Lead Auto Convert To Opportunity</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Call_Conversion_Service</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Converted</stringValue>
            </value>
        </filters>
        <filters>
            <field>IsConverted</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Lead</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Draft</status>

    <actionCalls>
        <name>Call_Conversion_Service</name>
        <label>Call Conversion Service</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <actionName>LeadConversionService</actionName>
        <actionType>apex</actionType>
        <inputParameters>
            <name>leadIds</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputParameters>
    </actionCalls>
</Flow>
