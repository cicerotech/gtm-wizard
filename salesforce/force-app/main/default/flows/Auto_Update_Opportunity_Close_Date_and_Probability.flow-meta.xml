    <formulas>
        <description>Calculates close date based on stage</description>
        <name>Calculate_Close_Date</name>
        <dataType>Date</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0&quot;, TODAY() + 120,
&quot;Stage 1&quot;, TODAY() + 90,
&quot;Stage 2&quot;, TODAY() + 60,
&quot;Stage 3&quot;, TODAY() + 30,
&quot;Stage 4&quot;, TODAY() + 15,
TODAY() + 90
)</expression>
    </formulas>
    <formulas>
        <description>Calculates probability based on stage</description>
        <name>Calculate_Probability</name>
        <dataType>Number</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0&quot;, 10,
&quot;Stage 1&quot;, 15,
&quot;Stage 2&quot;, 20,
&quot;Stage 3&quot;, 50,
&quot;Stage 4&quot;, 75,
25
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description>Calculate close date based on stage.</description>
        <name>CalculateCloseDateV2</name>
        <dataType>Date</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0 - Qualifying&quot;, TODAY() + 120,
&quot;Stage 1&quot;, TODAY() + 90,
&quot;Stage 2&quot;, TODAY() + 60,
&quot;Stage 3&quot;, TODAY() + 30,
&quot;Stage 4&quot;, TODAY() + 15,
TODAY() + 90
)</expression>
    </formulas>
    <formulas>
        <description>Calculate close probability based on stage.</description>
        <name>CalculateProbabilityV2</name>
        <dataType>Number</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0 - Qualifying&quot;, 10,
&quot;Stage 1&quot;, 15,
&quot;Stage 2&quot;, 20,
&quot;Stage 3&quot;, 50,
&quot;Stage 4&quot;, 75,
25
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>CloseAuto</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 150</expression>
    </formulas>
    <formulas>
        <name>CloseBasic</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 150</expression>
    </formulas>
    <formulas>
        <name>CLOSEDATECALCV3</name>
        <dataType>DateTime</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0 - Qualifying&quot;, DATETIMEVALUE(TODAY() + 120),
&quot;Stage 1 - Discovery&quot;, DATETIMEVALUE(TODAY() + 90),
&quot;Stage 2 - SQO&quot;, DATETIMEVALUE(TODAY() + 60),
&quot;Stage 3 - Pilot&quot;, DATETIMEVALUE(TODAY() + 30),
&quot;Stage 4 - Proposal&quot;, DATETIMEVALUE(TODAY() + 15),
DATETIMEVALUE(TODAY() + 90)
)</expression>
    </formulas>
    <formulas>
        <name>CloseDateUpdate</name>
        <dataType>Date</dataType>
        <expression>IF(
  ISNULL({!$Record.CloseDate}),
  {!Stage1closedate},
  {!$Record.CloseDate}
)</expression>
    </formulas>
    <formulas>
        <name>DateStage0_1</name>
        <dataType>Date</dataType>
        <expression>{!CloseBasic}</expression>
    </formulas>
    <formulas>
        <name>DealStatusAuto</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK(TEXT({!$Record.Deal_Status__c})),
  &quot;Green&quot;,
  TEXT({!$Record.Deal_Status__c})
)</expression>
    </formulas>
    <formulas>
        <name>Namingv0</name>
        <dataType>String</dataType>
        <expression>IF(
  OR(
    ISBLANK({!$Record.Name}),
    CONTAINS({!$Record.Name}, &quot;Qualifying&quot;)
  ),
  {!$Record.Account.Name} &amp; &quot; - Discovery&quot;,
  {!$Record.Name}
)</expression>
    </formulas>
    <formulas>
        <name>NewStage1Naming</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK({!$Record.Name}),
  {!$Record.Account.Name} &amp; &quot; - Discovery&quot;,
  {!$Record.Name}
)</expression>
    </formulas>
    <formulas>
        <name>OppNamingv0</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK({!$Record.Name}),
  {!NewStage1Naming},
  {!$Record.Name}
)</expression>
    </formulas>
    <formulas>
        <name>OpportunityNameCalc</name>
        <dataType>String</dataType>
        <expression>CASE(TEXT({!$Record.StageName}),
&quot;Stage 0 - Qualifying&quot;, {!$Record.Account.Name} &amp; &quot; - Qualifying&quot;,
&quot;Stage 1 - Discovery&quot;, {!$Record.Account.Name} &amp; &quot; - Discovery&quot;,
{!$Record.Account.Name}
)</expression>
    </formulas>
    <formulas>
        <name>PercenttoClose</name>
        <dataType>Number</dataType>
        <expression>{!ProbabilityStage0_1}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>ProbabilityStage0_1</name>
        <dataType>Number</dataType>
        <expression>{!Calculate_Probability}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Stage1closedate</name>
        <dataType>Date</dataType>
        <expression>TODAY()+120</expression>
    </formulas>
    <formulas>
        <name>stage1oppnames</name>
        <dataType>String</dataType>
        <expression>IF(
  TEXT({!$Record.StageName}) = &quot;Stage 1 - Discovery&quot;,
  {!$Record.Account.Name} &amp; &quot; - Discovery&quot;,
  {!$Record.Name}
)</expression>
