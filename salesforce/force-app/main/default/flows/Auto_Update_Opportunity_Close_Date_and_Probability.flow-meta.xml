    <description>Automatically updates Close Date and Probability fields when Opportunity Stage changes. Stage 0=4mo/10%, Stage 1=3mo/15%, Stage 2=2mo/20%, Stage 3=1mo/50%, Stage 4=Proposal/75%</description>
    <environments>Default</environments>
    <formulas>
        <name>ACV1</name>
        <dataType>Currency</dataType>
        <expression>IF(
  ISNULL({!$Record.ACV__c}),
  300000,
  {!$Record.ACV__c}
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>acv2</name>
        <dataType>Currency</dataType>
        <expression>IF(
  ISNULL({!$Record.Amount}),
  300000,
  {!$Record.Amount}
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>acv3</name>
        <dataType>Currency</dataType>
        <expression>IF(
  ISNULL({!$Record.ACV__c}),
  300000,
  {!$Record.ACV__c}
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>amount1</name>
        <dataType>Currency</dataType>
