<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>On Opportunity CREATE: Copies initial Next Steps value to Customer History. Does NOT modify Next Steps field.</description>
    <environments>Default</environments>
    <formulas>
        <name>TodayFormatted</name>
        <dataType>String</dataType>
        <expression>TEXT(YEAR(TODAY())) &amp; "-" &amp; 
IF(MONTH(TODAY()) &lt; 10, "0", "") &amp; TEXT(MONTH(TODAY())) &amp; "-" &amp; 
IF(DAY(TODAY()) &lt; 10, "0", "") &amp; TEXT(DAY(TODAY()))</expression>
    </formulas>
    <formulas>
        <name>InitialHistoryEntry</name>
        <dataType>String</dataType>
        <expression>{!TodayFormatted} &amp; ": " &amp; {!$Record.Next_Steps__c}</expression>
    </formulas>
    <interviewLabel>Next Steps History On Create {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Next Steps History On Create</label>
    <processType>AutoLaunchedFlow</processType>
    <assignments>
        <name>Set_Initial_History</name>
        <label>Set Initial History</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <assignmentItems>
            <assignToReference>$Record.Next_Step_Eudia__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>InitialHistoryEntry</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Set_Initial_History</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Next_Steps__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>

