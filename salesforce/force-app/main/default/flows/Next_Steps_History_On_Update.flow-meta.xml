<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>On Opportunity UPDATE: When Next Steps changes, captures the OLD value in Customer History. Does NOT modify Next Steps field.</description>
    <environments>Default</environments>
    <formulas>
        <name>TodayFormatted</name>
        <dataType>String</dataType>
        <expression>TEXT(YEAR(TODAY())) &amp; "-" &amp; 
IF(MONTH(TODAY()) &lt; 10, "0", "") &amp; TEXT(MONTH(TODAY())) &amp; "-" &amp; 
IF(DAY(TODAY()) &lt; 10, "0", "") &amp; TEXT(DAY(TODAY()))</expression>
    </formulas>
    <formulas>
        <name>NewHistoryEntry</name>
        <dataType>String</dataType>
        <expression>{!TodayFormatted} &amp; ": " &amp; {!$Record__Prior.Next_Steps__c} &amp; BR() &amp; "---" &amp; BR() &amp; 
IF(ISBLANK({!$Record.Next_Step_Eudia__c}), "", {!$Record.Next_Step_Eudia__c})</expression>
    </formulas>
    <interviewLabel>Next Steps History On Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Next Steps History On Update</label>
    <processType>AutoLaunchedFlow</processType>
    <assignments>
        <name>Prepend_To_History</name>
        <label>Prepend To History</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <assignmentItems>
            <assignToReference>$Record.Next_Step_Eudia__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>NewHistoryEntry</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Prepend_To_History</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Next_Steps__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>

