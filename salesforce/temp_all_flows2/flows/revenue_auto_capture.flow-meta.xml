<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>RecurringOrProject</name>
        <dataType>String</dataType>
        <expression>IF(
  {!$Record.Term__c}&lt; 12,
  &quot;Project&quot;,
  &quot;Recurring&quot;
)</expression>
    </formulas>
    <interviewLabel>revenue auto capture {!$Flow.CurrentDateTime}</interviewLabel>
    <label>revenue auto capture</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>add_rev</name>
        <label>add rev</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Revenue_Type__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Commitment</stringValue>
            </value>
        </filters>
        <inputAssignments>
            <field>ARR__c</field>
            <value>
                <elementReference>$Record.ACV__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Booking_ACV__c</field>
            <value>
                <elementReference>$Record.ACV__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Revenue_Type__c</field>
            <value>
                <elementReference>RecurringOrProject</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>add_rev</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>StageName</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>StageName</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Stage 6. Closed(Won)</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
