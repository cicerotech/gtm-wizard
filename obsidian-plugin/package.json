{
  "name": "eudia-scribe",
  "version": "2.0.0",
  "description": "Record meetings, transcribe with AI, sync to Salesforce. Zero config required.",
  "main": "main.js",
  "scripts": {
    "dev": "esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --sourcemap --watch",
    "build": "esbuild main.ts --bundle --outfile=main.js --external:obsidian --format=cjs --minify",
    "copy-to-vault": "cp main.js manifest.json styles.css ../vault-template/.obsidian/plugins/eudia-scribe/"
  },
  "keywords": ["obsidian", "plugin", "salesforce", "eudia", "transcription", "audio", "recording"],
  "author": "Eudia",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "obsidian": "^1.4.0",
    "typescript": "^5.0.0"
  }
}
