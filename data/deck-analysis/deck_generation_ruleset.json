{
  "meta": {
    "version": "1.0",
    "created": "2026-01-05",
    "description": "Structured ruleset for generating Eudia sales presentations based on analyzed deck DNA"
  },
  
  "brand_identity": {
    "colors": {
      "primary": "#163340",
      "secondary": "#000000",
      "tertiary": "#575757",
      "accent": "#33D2C5",
      "background_dark": "#3D3D3D"
    },
    "typography": {
      "title_font": "Aptos SemiBold",
      "body_font": "Aptos Light",
      "case_study_font": "Century Gothic",
      "fallback_fonts": ["Arial", "Helvetica"]
    },
    "slide_dimensions": {
      "width_inches": 22,
      "height_inches": 12.36,
      "aspect_ratio": "16:9"
    }
  },
  
  "required_sections": [
    {
      "order": 1,
      "type": "title_slide",
      "required": true,
      "template": "Presentation Cover and Ending",
      "content_rules": {
        "headline_pattern": "Outcome-oriented statement",
        "examples": ["Drive Outcomes with AI", "The Company Brain in Action"]
      }
    },
    {
      "order": 2,
      "type": "credibility",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "must_include": [
          "Who we are statement",
          "Series A funding ($105M)",
          "Investor logos",
          "F500 customer logos"
        ],
        "positioning": "Purpose-Built to Work with F500 Teams"
      }
    },
    {
      "order": 3,
      "type": "problem_framing",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "headline": "The problem we are solving",
        "pain_point_categories": [
          "Resource constraints",
          "Knowledge silos", 
          "Misaligned incentives",
          "Strategic elevation opportunity"
        ]
      }
    },
    {
      "order": 4,
      "type": "solution_overview",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "headline": "How Eudia Delivers Outcomes",
        "framework": "AI technology + knowledge/data + human expertise",
        "speed_claim": "deliver in weeks, not quarters"
      }
    },
    {
      "order": 5,
      "type": "value_alignment",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "headline": "Eudia Aligns to Your Strategic Objectives",
        "three_pillars": [
          {
            "name": "Drive Speed",
            "description": "Infusing AI into legal workflows to speed up the business"
          },
          {
            "name": "Reduce Cost", 
            "description": "Reducing outside counsel spend or optimize team design to unlock cost efficiencies"
          },
          {
            "name": "Create an AI Edge",
            "description": "Leveraging AI to give you a competitive advantage against your counterparties or competitors"
          }
        ],
        "enablers": ["Data", "Analytics"]
      }
    },
    {
      "order": 6,
      "type": "company_brain",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "headline": "Building the Company Brain",
        "tagline": "The Company Brain is not a static database – it's a living intelligence system",
        "four_capabilities": [
          "Ingests knowledge across contracts, litigation files, compliance policies, prior deals, regulatory frameworks",
          "Structures and operationalizes knowledge for reuse and workflow embedding",
          "Trains custom 'MINDs' for high-value domains",
          "Learns continuously, compounding enterprise legal intelligence over time"
        ]
      }
    },
    {
      "order": 7,
      "type": "proof_points",
      "required": true,
      "min_count": 2,
      "template": "Case Study",
      "content_rules": {
        "structure": {
          "metric": "Large quantified outcome (30%, 50%, $12M)",
          "use_case": "Specific application area",
          "customer_context": "Brief company/situation description"
        }
      }
    },
    {
      "order": 8,
      "type": "customer_testimonial",
      "required": true,
      "template": "Standard Content",
      "content_rules": {
        "quote_format": "Direct quote in quotation marks",
        "attribution_format": "Name, Title, Company",
        "title_requirement": "C-level or senior legal leader"
      }
    },
    {
      "order": 9,
      "type": "close",
      "required": true,
      "template": "Presentation Cover and Ending",
      "content_rules": {
        "options": ["Visual branding", "Contact information", "Next steps"]
      }
    }
  ],
  
  "optional_sections": [
    {
      "type": "pricing",
      "when_to_include": "When commercial discussion is expected",
      "template": "Emphasis",
      "content_rules": {
        "approach": "Tiered structure by contract type",
        "flexibility_note": "Contract types can flex tiers",
        "engagement_model": "SOW-based"
      }
    },
    {
      "type": "extended_case_studies",
      "when_to_include": "When deep proof is needed or industry-specific examples required",
      "template": "Case Study",
      "slide_count": "4-8 slides"
    }
  ],
  
