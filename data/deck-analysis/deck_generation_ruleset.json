  "pain_point_library": [
    {
      "id": "resource_constraints",
      "text": "In-house legal teams are stretched thin on manual, low complexity work that takes away from being a strategic partner to the business",
      "stakeholders": ["clo", "gc", "legal_ops"]
    },
    {
      "id": "knowledge_silos",
      "text": "Knowledge currently stored in static playbooks, siloed systems and often trapped in the brains of individuals, external law firms, or consulting firms",
      "stakeholders": ["clo", "gc"]
    },
    {
      "id": "misaligned_incentives",
      "text": "Traditional law firms using billable hours have misaligned incentives to adopt AI; SaaS companies sell seats not tied to outcomes",
      "stakeholders": ["clo", "gc", "procurement"]
    },
    {
      "id": "strategic_opportunity",
