  "customization_inputs": {
    "prospect_industry": {
      "type": "select",
      "options": ["technology", "financial_services", "pharma_life_sciences", "manufacturing", "consumer_goods", "energy", "other"],
      "affects": ["case_study_selection", "pain_point_emphasis"]
    },
    "primary_use_case": {
      "type": "select", 
      "options": ["contracting", "ma_diligence", "compliance_review", "knowledge_management", "litigation_support", "general"],
      "affects": ["proof_point_selection", "capability_emphasis"]
    },
    "primary_stakeholder": {
      "type": "select",
      "options": ["clo", "gc", "legal_ops", "procurement", "compliance", "c_suite"],
      "affects": ["messaging_focus", "value_prop_order"]
    },
    "company_size": {
      "type": "select",
      "options": ["mid_market", "enterprise", "f500"],
      "affects": ["credibility_emphasis", "scale_messaging"]
    },
    "key_value_driver": {
      "type": "select",
      "options": ["speed", "cost", "competitive_edge"],
      "affects": ["pillar_ordering", "metric_selection"]
    }
  },
  
  "generation_guidelines": {
    "slide_count": {
      "overview_pitch": {"min": 10, "max": 12},
      "case_study_focus": {"min": 12, "max": 15},
      "pricing_commercial": {"min": 2, "max": 3}
    },
    "tone": {
      "voice": "confident but not arrogant",
      "focus": "outcome-oriented",
      "style": "enterprise-appropriate, professional",
      "specificity": "always use numbers, names, titles, timelines"
    },
    "content_density": {
      "max_bullet_points_per_slide": 5,
      "prefer_visuals": true,
      "metrics_format": "large number + brief context"
    }
  }
}




