  "entityExtractors": {
    "company": {
      "type": "regex",
      "pattern": "\\b[A-Z][a-zA-Z0-9\\s&'-]+\\b",
      "minLength": 2,
      "maxLength": 50
    },
    "product": {
      "type": "enum",
      "values": ["contracting", "compliance", "m&a", "sigma", "insights", "litigation", "fde", "custom agents", "secondee", "other"],
      "aliases": {
        "contracting": ["AI-Augmented Contracting_Managed Services", "AI-Augmented Contracting_In-House Technology", "augmented contracting"],
        "contracting managed": ["AI-Augmented Contracting_Managed Services"],
        "contracting in-house": ["AI-Augmented Contracting_In-House Technology"],
        "m&a": ["AI-Augmented M&A_Managed Service", "Augmented-M&A", "mergers and acquisitions"],
        "compliance": ["AI-Augmented Compliance_In-House Technology"],
        "sigma": ["AI Platform - Sigma"],
        "insights": ["AI Platform - Insights"],
        "litigation": ["AI Platform - Litigation"],
        "fde": ["FDE - Custom AI Solution"],
        "custom agents": ["FDE - Custom AI Solution"],
        "secondee": ["Contracting - Secondee", "Other_Secondee"],
        "other": ["Other_Managed Service", "Other_Secondee", "Other"]
      }
    },
    "month": {
      "type": "datetime",
      "formats": ["MMMM", "MM", "MMM YYYY"]
    }
  },
  "businessRules": {
    "writeOperations": {
      "enabled": true,
      "auditLog": true,
      "requireConfirmation": true,
      "allowedUsers": ["U094AQE9V7D"]
    },
    "rateLimit": {
      "queriesPerMinute": 10,
      "queriesPerHour": 100,
      "queriesPerDay": 500
    },
    "caching": {
      "enabled": true,
      "ttl": 120,
      "excludePatterns": ["create_*", "update_*"]
    }
  },
  "monitoring": {
    "trackUsage": true,
    "calculateROI": true,
    "alertOnFailureRate": 0.1,
    "alertOnLatency": 5000
  }
}

