    <description>Single-screen opportunity creation with all accounts in searchable dropdown</description>
    <dynamicChoiceSets>
        <name>AccountChoices</name>
        <dataType>String</dataType>
        <displayField>Name</displayField>
        <limit>200</limit>
        <object>Account</object>
        <outputAssignments>
            <assignToReference>SelectedAccountId</assignToReference>
            <field>Id</field>
        </outputAssignments>
        <sortField>Name</sortField>
        <sortOrder>Asc</sortOrder>
        <valueField>Id</valueField>
    </dynamicChoiceSets>
    <dynamicChoiceSets>
        <name>ProductLineChoices</name>
        <dataType>Picklist</dataType>
        <displayField xsi:nil="true"/>
        <object xsi:nil="true"/>
        <picklistField>Product_Line__c</picklistField>
        <picklistObject>Opportunity</picklistObject>
    </dynamicChoiceSets>
    <environments>Default</environments>
    <formulas>
        <name>CalculatedCloseDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!TargetSignDate}), TODAY() + 180, {!TargetSignDate})</expression>
    </formulas>
    <formulas>
        <name>GeneratedOppName</name>
        <dataType>String</dataType>
        <expression>{!SelectedAccountName} &amp; &quot; - &quot; &amp; IF(ISBLANK({!ProductLine}) || {!ProductLine} = &quot;Undetermined&quot;, {!OpportunityStage}, {!ProductLine})</expression>
    </formulas>
    <interviewLabel>Quick Create Opp v2 {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Quick Create Opp v2</label>
